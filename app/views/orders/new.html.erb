<h1>New Order</h1>

<table>
  <thead>
    <tr>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><h2>Bread</h2></td>
    </tr>
    <% @ingredients.where(cat: "bread").each do |bread| %>
      <tr>
        <td>
          <%= radio_button_tag(:bread, bread.name) %>
        </td>
        <td>
          <%= label_tag(:bread, bread.name) %>
        </td>
      </tr>
    <% end %>
    <tr>
      <td><h2>Main</h2></td>
    </tr>
    <% @ingredients.where(cat: "main").each do |main| %>
      <tr>
        <td><%= main.name %></td>
      </tr>
    <% end %><tr>
      <td><h2>Side</h2></td>
    </tr>
    <% @ingredients.where(cat: "side").each do |side| %>
      <tr>
        <td><%= side.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= render 'form', order: @order %>

<%= link_to 'Back', orders_path %>
